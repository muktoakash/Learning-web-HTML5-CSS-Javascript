<%- include('partials/head') %>

<%- include('partials/searchForm') %>

<% if (searchTerm) {%>
    <% if (data.length !== 0) { %>
        <h2>Showing results for <%= searchTerm%></h2>
        <section>
            <div class="container text-center">
                <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
                    <% for (title of data) { %>
                        <%if (title.show.image) { %>
                            <div class="col mb-5 px-1">
                                <img src="<%= title.show.image.medium; %>" alt="">
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </section>
    <% } else {%>
        <h2 id="results">No results found for <%= searchTerm %></h2>
    <% } %>

<% } else { %>
    <h2> Nothing Searched so Nothing Found!</h2>
<% } %>

<%- include('partials/foot') %>
